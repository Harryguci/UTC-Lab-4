@using UTC_LAB_4.Models;

@{
    ViewData["Title"] = "Learner List";
}

@model IEnumerable<Learner>



<div>

    <table class="table">
        <thead>
            <tr>
                <th>Learner ID</th>
                <th>Last Name</th>
                <th>First Mid Name</th>
                <th>Enrollment Date</th>
                <th>Major ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LearnerID</td>
                    <td>@item.LastName</td>
                    <td>@item.FirstMidName</td>
                    <td>@item.MajorID</td>
                </tr>
            }
        </tbody>
    </table>
</div>
