@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Learner>
<h1>Learner List</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên</th>
            <th>Họ</th>
            <th>Ngành</th>
            <th>Ngày Nhập Học</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.LearnerID</td>
                <td>@s.FirstMidName</td>
                <td>@s.LastName</td>
                <td>@s.Major.MajorName</td>
                <td>@s.EnrollmentDate</td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-outline-primary" href="/Learner/Edit/@s.LearnerID">Edit</a>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="LearnerID" value="@s.LearnerID" />
                            <button class="btn btn-outline-primary" type="submit">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New Student</a>